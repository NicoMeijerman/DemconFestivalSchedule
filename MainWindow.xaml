<Window x:Class="DemconFestivalSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemconFestivalSchedule"
        mc:Ignorable="d"
        Title="Demcon Festival Challenge" Height="600" Width="1000">
    <Grid>
        <Button x:Name="ReadFile" Content="Read shows" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="ReadFile_Click"/>
        <Button x:Name="CreateAndShowSchedule" Content="Create and show&#xa; schedule" HorizontalAlignment="Left" Height="50" Margin="10,110,0,0" VerticalAlignment="Top" Width="100" Click="CreateAndShowSchedule_Click"/>
        <Button x:Name="WriteFile" Content="Write schedule" HorizontalAlignment="Left" Height="50" Margin="10,210,0,0" VerticalAlignment="Top" Width="100" Click="WriteFile_Click"/>
        <Border Margin="150,10,10,10" BorderThickness="1,1,1,1" BorderBrush="Black" >
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" >
                <Canvas x:Name="ScheduleTable"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
